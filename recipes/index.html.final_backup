    <script>
        function filterRecipes(filter) {
            const cards = document.querySelectorAll('.recipe-card');
            const buttons = document.querySelectorAll('.filter-btn');
            
            // Update active button
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Filter cards
            cards.forEach(card => {
                if (filter === 'all') {
                    card.style.display = 'block';
                } else if (filter === 'weapon' || filter === 'armor') {
                    card.style.display = card.dataset.type === filter ? 'block' : 'none';
                } else {
                    card.style.display = card.dataset.tier === filter ? 'block' : 'none';
                }
            });
        }
        
        function useRecipe(recipeId) {
            // Redirect to calculator with recipe parameter
            window.location.href = '/?recipe=' + recipeId;
