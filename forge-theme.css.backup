    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
}

header .container {
    padding: 1.5rem;
}

header h1 {
    margin: 0 0 1rem 0;
    text-align: center;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
}

/* Footer Enhancement - 页脚增强 */
footer {
    background: var(--bg-darker);
    border-top: 2px solid var(--ui-orange);
    padding: 3rem 0 2rem 0;
    margin-top: 4rem;
}

footer .container {
    text-align: center;
}

footer p {
    margin: 0.5rem 0;
    color: var(--text-muted);
    font-size: 0.9rem;
}

footer a {
    color: var(--ui-orange);
    margin: 0 0.5rem;
}

footer a:hover {
    color: var(--rarity-legendary);
}

/* Badge and Image Styling - 徽章和图片样式 */
footer img {
    margin: 0.25rem;
    border-radius: 4px;
    transition: all var(--transition-normal);
    filter: brightness(0.9);
}

footer img:hover {
    filter: brightness(1.1);
    transform: scale(1.05);
}

.badge-rounded {
    border-radius: 8px !important;
}

.badge-auto-height {
    height: auto !important;
    max-height: 60px;
}

/* Utility Classes - 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mb-1 { margin-bottom: 0.5rem; }
.mb-2 { margin-bottom: 1rem; }
.mb-3 { margin-bottom: 1.5rem; }
.mb-4 { margin-bottom: 2rem; }

.mt-1 { margin-top: 0.5rem; }
.mt-2 { margin-top: 1rem; }
.mt-3 { margin-top: 1.5rem; }
.mt-4 { margin-top: 2rem; }

/* Mobile Responsive Breakpoints - 移动端响应式断点 */
@media (max-width: 768px) {
    /* Simplified animations for mobile performance */
    body {
        animation: none;
        background: var(--bg-primary);
    }
    
    .content-section {
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .hero {
        padding: 2rem 0;
    }
    
    .features-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .feature-card {
        padding: 1.5rem;
    }
    
    .tips-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    nav {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    nav a {
        text-align: center;
        padding: 0.75rem;
    }
    
    .gacha-simulator-wrapper iframe {
        height: 400px;
    }
    
    /* Reduce glow effects on mobile for performance */
    .feature-card:hover::before,
    .content-section:hover {
        opacity: 0.5;
    }
    
    /* Simplify table on mobile */
    .official-table {
        font-size: 0.85rem;
    }
    
    .official-table th,
    .official-table td {
        padding: 0.75rem 0.5rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 1rem;
    }
    
    .content-section {
        padding: 1rem;
        border-radius: 12px;
    }
    
    .feature-card {
        padding: 1rem;
    }
    
    .forge-button {
        width: 100%;
        text-align: center;
        margin-bottom: 0.5rem;
    }
    
    .gacha-simulator-wrapper {
        padding: 0.5rem;
    }
    
    .gacha-simulator-wrapper iframe {
        height: 350px;
    }
}

/* High contrast mode support - 高对比度模式支持 */
@media (prefers-contrast: high) {
    :root {
        --text-primary: #ffffff;
        --text-secondary: #ffffff;
        --bg-primary: #000000;
        --bg-secondary: #1a1a1a;
        --ui-orange: #ffaa00;
        --border-primary: #ffffff;
    }
}

/* Reduced motion support - 减少动画模式支持 */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    body {
        animation: none;
    }
}

/* Print styles - 打印样式 */
@media print {
    body {
        background: white;
        color: black;
    }
    
    .content-section {
        border: 1px solid black;
        box-shadow: none;
        background: white;
    }
    
    nav,
    footer,
    .gacha-simulator-wrapper {
        display: none;
    }
}

/* Phase 2: Special Page Enhancements - 特殊页面增强 */

/* Ore Pages Specific Styling - 矿石页面专用样式 */
.ore-showcase {
    background: var(--bg-metal-texture);
    border: 3px solid var(--snowite-blue);
    border-radius: 20px;
    padding: 2.5rem;
    margin: 2rem 0;
    box-shadow: 
        0 12px 40px rgba(59, 130, 246, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.ore-showcase::before {
    content: '❄️';
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 2rem;
    animation: sparkle 3s ease-in-out infinite;
}

.ore-showcase h2 {
    color: var(--snowite-blue);
    font-family: var(--font-display);
    text-shadow: 0 0 15px rgba(59, 130, 246, 0.6);
}

.ore-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.ore-stat-card {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid var(--snowite-blue);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all var(--transition-normal);
}

.ore-stat-card:hover {
    background: rgba(59, 130, 246, 0.2);
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
}

.ore-stat-label {
    font-family: var(--font-body);
    font-weight: 600;
    color: var(--text-secondary);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
}

.ore-stat-value {
    font-family: var(--font-code);
    font-weight: 700;
    font-size: 1.8rem;
    color: var(--snowite-light);
    text-shadow: 0 0 10px rgba(96, 165, 250, 0.5);
}

/* Pickaxe Page Styling - 镐子页面样式 */
.pickaxe-showcase {
    background: var(--bg-metal-texture);
    border: 3px solid var(--rarity-legendary);
    border-radius: 20px;
    padding: 2.5rem;
    margin: 2rem 0;
    box-shadow: 
        0 12px 40px rgba(245, 158, 11, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.pickaxe-showcase::before {
    content: '⛏️';
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 2rem;
    animation: forgeGlow 2s ease-in-out infinite;
}

.pickaxe-tier-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.pickaxe-tier-card {
    background: var(--bg-card);
    border: 2px solid var(--border-primary);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all var(--transition-normal);
    position: relative;
}

.pickaxe-tier-card.legendary {
    border-color: var(--rarity-legendary);
    background: linear-gradient(135deg, 
        rgba(245, 158, 11, 0.1) 0%, 
        var(--bg-card) 100%);
}

.pickaxe-tier-card.epic {
    border-color: var(--rarity-epic);
    background: linear-gradient(135deg, 
        rgba(168, 85, 247, 0.1) 0%, 
        var(--bg-card) 100%);
}

.pickaxe-tier-card.rare {
    border-color: var(--rarity-rare);
    background: linear-gradient(135deg, 
        rgba(59, 130, 246, 0.1) 0%, 
        var(--bg-card) 100%);
}

.pickaxe-tier-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
}

.pickaxe-name {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.3rem;
    margin-bottom: 1rem;
}

.pickaxe-stats {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.pickaxe-stat {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 6px;
}

.pickaxe-stat-label {
    font-family: var(--font-body);
    font-weight: 500;
    color: var(--text-secondary);
}

.pickaxe-stat-value {
    font-family: var(--font-code);
    font-weight: 600;
    color: var(--ui-orange);
}

/* Feedback Page Styling - 反馈页面样式 */
.feedback-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
}

.feedback-form {
    background: var(--bg-metal-texture);
    border: 2px solid var(--ui-orange);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: var(--shadow-card-hover);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--ui-orange);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}

.form-input,
.form-textarea {
    width: 100%;
    padding: 1rem;
    background: var(--bg-darker);
    border: 2px solid var(--border-primary);
    border-radius: 8px;
    color: var(--text-primary);
    font-family: var(--font-body);
    font-size: 1rem;
    transition: all var(--transition-normal);
}

.form-input:focus,
.form-textarea:focus {
    outline: none;
    border-color: var(--ui-orange);
    box-shadow: 0 0 15px rgba(245, 158, 11, 0.3);
    background: var(--bg-secondary);
}

.form-textarea {
    min-height: 120px;
    resize: vertical;
}

.submit-button {
    background: linear-gradient(135deg, var(--ui-orange), var(--rarity-legendary));
    color: var(--text-primary);
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all var(--transition-normal);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
}

.submit-button:active {
    transform: translateY(0);
}

/* Legal Pages Styling - 法律页面样式 */
.legal-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
}

.legal-section {
    background: var(--bg-secondary);
    border-left: 4px solid var(--ui-orange);
    padding: 2rem;
    margin-bottom: 2rem;
    border-radius: 0 12px 12px 0;
}

.legal-section h3 {
    color: var(--ui-orange);
    font-family: var(--font-display);
    font-weight: 700;
    margin-bottom: 1rem;
}

.legal-section ul {
    padding-left: 1.5rem;
}

.legal-section li {
    margin-bottom: 0.5rem;
    line-height: 1.7;
}

/* Enhanced Data Tables for Special Pages - 特殊页面增强数据表格 */
.enhanced-data-table {
    width: 100%;
    border-collapse: collapse;
    background: var(--bg-metal-texture);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-card-hover);
    margin: 2rem 0;
}

.enhanced-data-table th {
    background: linear-gradient(135deg, var(--ui-orange), var(--rarity-legendary));
    color: var(--text-primary);
    padding: 1.2rem 1rem;
    text-align: left;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.enhanced-data-table td {
    padding: 1rem;
    border-bottom: 1px solid var(--border-primary);
    font-family: var(--font-body);
    transition: all var(--transition-fast);
}

.enhanced-data-table tr:hover {
    background: rgba(245, 158, 11, 0.1);
    transform: scale(1.01);
}

.enhanced-data-table .data-highlight {
    font-family: var(--font-code);
    font-weight: 600;
    color: var(--ui-orange);
    background: rgba(245, 158, 11, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 4px;
}

/* Responsive Enhancements for Special Pages - 特殊页面响应式增强 */
@media (max-width: 768px) {
    .ore-stats,
    .pickaxe-tier-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .ore-showcase,
    .pickaxe-showcase,
    .feedback-form {
        padding: 1.5rem;
        margin: 1rem 0;
    }
    
    .feedback-container,
    .legal-content {
        padding: 1rem;
    }
    
    .enhanced-data-table {
        font-size: 0.9rem;
    }
    
    .enhanced-data-table th,
    .enhanced-data-table td {
        padding: 0.75rem 0.5rem;
    }
}

@media (max-width: 480px) {
    .ore-stat-value {
        font-size: 1.4rem;
    }
    
    .pickaxe-name {
        font-size: 1.1rem;
    }
    
    .form-input,
    .form-textarea {
        padding: 0.75rem;
    }
    
    .submit-button {
        width: 100%;
        padding: 1rem;
    }
}
/* Inline Style Cleanup - 内联样式清理 */

/* Calculator Page Specific Styles - 计算器页面专用样式 */
.selected-ores-section {
    margin-top: 20px;
}

.ore-composition-section {
    margin-top: 20px;
}

.popular-combinations-section {
    margin-top: 10px;
}

.preset-btn {
    background: var(--ui-blue);
    color: var(--text-primary);
    border: 2px solid var(--ui-blue);
    border-radius: 6px;
    padding: 0.5rem 1rem;
    margin: 0.25rem;
    font-family: var(--font-body);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-normal);
}

.preset-btn:hover {
    background: var(--ui-orange);
    border-color: var(--ui-orange);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
}

/* Advertisement Container Styles - 广告容器样式 */
.ad-container {
    text-align: center;
    margin: 2rem 0;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    border: 1px solid var(--border-secondary);
}

.adsbygoogle {
    display: block;
    margin: 1rem auto;
}

/* Remove any remaining inline styles - 移除任何剩余的内联样式 */
[style] {
    /* This will be overridden by specific classes */
